<div class="video-wrapper">
  <%= if @video_url do %>
    <video controls autoplay muted class="w-full max-w-4xl mx-auto">
      <source src={@video_url} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  <% else %>
    <p class="text-red-600">Failed to load video.</p>
  <% end %>
</div>
